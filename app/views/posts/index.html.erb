<h1>Listing Posts</h1>

<% @posts.each do |post| %>
  <%# Using raw makes us vulnerable to XSS %>
  <h2><%= raw post.title %></h2>
  <p><i>By <%= post.user.try(:username) %></i></p>
  <p><%= raw post.body %></p>
  <p>
    <%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>

<p><%= link_to 'New Post', new_post_path %></p>
